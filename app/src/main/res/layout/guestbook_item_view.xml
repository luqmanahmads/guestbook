<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_guestbook"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp">

        <TextView
            style="@style/CardHeaderText1"
            android:id="@+id/txv_label_guestbook_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guestbook Name"
            android:textAllCaps="false" />

        <TextView
            style="@style/CardContentText1"
            android:id="@+id/txv_guestbook_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guestbook Description" />

        <TextView
            style="@style/CardContentText2"
            android:id="@+id/txv_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modified Date" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_entries"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <TextView
            android:id="@+id/txv_entries"
            style="@style/ClickableText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edt_guestbook_entries" />
    </LinearLayout>

</LinearLayout>
