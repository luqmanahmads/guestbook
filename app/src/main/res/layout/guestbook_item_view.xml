<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="15dp">

    <TextView
        android:id="@+id/txv_guestbook_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Guestbook Name"
        android:textAllCaps="false"
        android:textSize="30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv_guestbook_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Guestbook Description"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txv_modified_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="monospace"
        android:text="Modified Date"
        android:textSize="12dp"
        android:textStyle="italic" />
</LinearLayout>
