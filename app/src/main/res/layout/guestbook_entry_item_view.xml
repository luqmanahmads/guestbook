<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/ly_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="#EDEDEA"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imv_guest_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:srcCompat="@tools:sample/backgrounds/scenic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_guest_name"
            style="@style/CardHeaderText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Name" />

        <TextView
            android:id="@+id/txv_guest_message"
            style="@style/CardContentText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Massage will be right here.."
            android:ellipsize="end"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/txv_modified_date"
            style="@style/CardContentText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modified Date" />
    </LinearLayout>
</LinearLayout>