<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/ly_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="15dp"
        android:background="#EDEDEA"
        android:orientation="vertical"></LinearLayout>

    <LinearLayout
        android:id="@+id/ly_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txv_guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Name"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txv_guest_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guest Massage will be right here.." />

        <TextView
            android:id="@+id/txv_create_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Date"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/txv_modified_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modified Date"
            android:textStyle="italic" />
    </LinearLayout>
</LinearLayout>